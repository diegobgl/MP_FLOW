<odoo>
    <!-- Heredar la vista tree de account.move.line -->
    <record id="view_move_line_tree_inherit_flujo" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherit.flujo</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="mp_flujo_id"/>
                <field name="mp_grupo_flujo_id"/>
            </xpath>
        </field>
    </record>

    <!-- Heredar la vista form de account.move.line -->
    <record id="view_move_line_form_inherit_flujo" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.flujo</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group>
                    <field name="mp_flujo_id"/>
                    <field name="mp_grupo_flujo_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
